---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <div class="internal-links">
      <HeaderLink href="/">SBCGS Physics Society</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
    <div class="social-links">
      <a href="https://mastodon.social/@t3ma" target="_blank">
        <span class="sr-only">Follow Astro on Mastodon</span>
        <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
          <path fill="currentColor" d="M11.19 12.195c2.016-.24 3.77-1.475 3.99-2.603..."></path>
        </svg>
      </a>
      <a href="https://twitter.com/temaprint" target="_blank">
        <span class="sr-only">Follow Astro on Twitter</span>
        <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
          <path fill="currentColor" d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334..."></path>
        </svg>
      </a>
      <a href="https://github.com/temaprint" target="_blank">
        <span class="sr-only">Go to Astro's GitHub repo</span>
        <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
          <path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53..."></path>
        </svg>
      </a>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: var(--orange-glass-medium); /* normal overlay */
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--orange-glass-light);
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  h2 {
    margin: 0;
    font-size: 1.5em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
    color: var(--secondary-orange);
    text-shadow: 0 0 10px var(--orange-base);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 0;
  }

  nav a {
    padding: 0.5em;
    color: var(--text);
    border-bottom: 2px solid transparent;
    text-decoration: none;
    font-size: 1.1em;
    transition: all 0.3s ease;
  }

  nav a:hover {
    color: var(--secondary-orange);
    border-bottom-color: var(--secondary-orange);
    text-shadow: 0 0 10px var(--orange-base);
  }

  nav a.active {
    color: var(--secondary-orange);
    border-bottom-color: var(--secondary-orange);
    text-shadow: 0 0 10px var(--orange-base);
  }

  .internal-links {
    display: flex;
    gap: 1em;
  }

  .social-links,
  .social-links a {
    display: flex;
    align-items: center;
    gap: 0.5em;
  }

  .social-links a {
    padding: 0.5em;
    border-radius: 50%;
    transition: all 0.3s ease;
  }

  .social-links a:hover {
    background: var(--orange-glass-light); /* hover overlay */
    transform: translateY(-2px);
  }

  .social-links svg {
    width: 24px;
    height: 24px;
    color: var(--text);
    transition: color 0.3s ease;
  }

  .social-links a:hover svg {
    color: var(--secondary-orange);
  }

  @media (max-width: 720px) {
    .social-links {
      display: none;
    }

    nav {
      padding: 0.5rem 0;
    }

    h2 {
      font-size: 1.2em;
    }

    nav a {
      font-size: 1em;
      padding: 0.3em;
    }
  }
</style>
