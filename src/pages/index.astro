---
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import productData from '../content/data/main.json';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const { product, seo } = productData;

// Get blog posts
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// HD Image URLs
const hdImages = {
  portal1: "https://images.unsplash.com/photo-1462331940025-496dfbfc7564?w=2048&q=95",
  portal2: "https://images.unsplash.com/photo-1534796636912-3b95b3ab5986?w=2048&q=95",
  texture: "https://images.unsplash.com/photo-1579546929662-711aa81148cf?w=2048&q=95",
  product: "/physicsocietyposter.png"
};
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={seo.title} description={seo.description} />
		<style define:vars={{
			portalBg1: `url(${hdImages.portal1})`,
			portalBg2: `url(${hdImages.portal2})`,
			textureBg: `url(${hdImages.texture})`
		}}>
			:root {
				--primary: #2a623d;
				--primary-dark: #1a472a;
				--secondary: #97ce4c;
				--text: #e0e0e0;
				--background: #0d1f13;
				--accent: #44281d;
				--glow: rgba(151, 206, 76, 0.3);
			}

			body {
				margin: 0;
				font-family: 'Atkinson', sans-serif;
				background: var(--background);
				color: var(--text);
				overflow-x: hidden;
			}

			main {
				width: 100%;
				max-width: 100%;
				margin: 0;
				padding: 0;
			}

			.container {
				width: 100%;
				max-width: 2400px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			.portal-bg {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background: 
					radial-gradient(circle at 10% 20%, rgba(42, 98, 61, 0.4) 0%, transparent 50%),
					radial-gradient(circle at 90% 80%, rgba(151, 206, 76, 0.2) 0%, transparent 50%),
					var(--background);
				z-index: -1;
				&::before {
					content: '';
					position: absolute;
					top: 0;
					left: 0;
					width: 100%;
					height: 100%;
					background: var(--textureBg) center/cover;
					opacity: 0.05;
					mix-blend-mode: overlay;
				}
			}

			/* ... rest of your original CSS continues exactly as you had it ... */
		</style>
	</head>
	<body>
		<div class="portal-bg"></div>
		<main>
			<section class="hero">
				<div class="hero-content">
					<div class="hero-text">
						<h1>{product.name}</h1>
						<p class="tagline">{product.tagline}</p>
						<p class="description">{product.description}</p>
						<a href={product.callToAction.url} class="cta-button">
							{product.callToAction.text}
						</a>
					</div>
					<div class="hero-image">
						<img src={hdImages.product} alt="Physics Society" />
					</div>
				</div>
			</section>

			<section class="features">
				<div class="container">
					<h2>Interdimensional Features</h2>
					<div class="features-grid">
						{product.features.map((feature) => (
							<div class="feature-card">
								<h3>{feature.title}</h3>
								<p>{feature.description}</p>
							</div>
						))}
					</div>
				</div>
			</section>

			<section class="testimonials">
				<div class="container">
					<h2>Multiversal Reviews</h2>
					<div class="testimonials-grid">
						{product.testimonials.map((testimonial) => (
							<div class="testimonial-card">
								<p class="testimonial-quote">"{testimonial.quote}"</p>
								<div class="testimonial-name">- {testimonial.name}</div>
							</div>
						))}
					</div>
				</div>
			</section>

			<section class="specs">
				<div class="container">
					<h2>Quantum Specifications</h2>
					<div class="specs-grid">
						{Object.entries(product.specs).map(([key, value]) => (
							<div class="spec-item">
								<div class="spec-label">{key}</div>
								<div class="spec-value">{value}</div>
							</div>
						))}
					</div>
				</div>
			</section>

			<section class="blog-section">
				<div class="container">
					<h2>Interdimensional Blog</h2>
					<div class="blog-grid">
						{posts.map((post) => (
							<a href={`/blog/${post.id}/`} class="blog-link">
								<article class="blog-card">
									<img 
										src={post.data.heroImage} 
										alt="" 
										class="blog-image"
									/>
									<div class="blog-content">
										<h3 class="blog-title">{post.data.title}</h3>
										<div class="blog-date">
											<FormattedDate date={post.data.pubDate} />
										</div>
										<p class="blog-description">{post.data.description}</p>
									</div>
								</article>
							</a>
						))}
					</div>
				</div>
			</section>

			<footer>
				<div class="container">
					<div class="social-links">
						{product.footer.socialLinks.map((link) => (
							<a href={link.url} target="_blank" rel="noopener noreferrer">
								{link.platform}
							</a>
						))}
					</div>
					<p class="disclaimer">{product.footer.legalDisclaimer}</p>
					<p>Contact: <a href={`mailto:${product.footer.contactEmail}`}>{product.footer.contactEmail}</a></p>
				</div>
			</footer>
		</main>
	</body>
</html>
