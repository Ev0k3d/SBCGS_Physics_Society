---
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import productData from '../content/data/main.json';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const { product, seo } = productData;

// Get blog posts
const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// HD Image URLs
const hdImages = {
  portal1: "https://images.unsplash.com/photo-1462331940025-496dfbfc7564?w=2048&q=95",
  portal2: "https://images.unsplash.com/photo-1534796636912-3b95b3ab5986?w=2048&q=95",
  texture: "https://images.unsplash.com/photo-1579546929662-711aa81148cf?w=2048&q=95",
  product: "/physicsocietyposter.png"
};
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={seo.title} description={seo.description} />
    <style define:vars={{
      portalBg1: `url(${hdImages.portal1})`,
      portalBg2: `url(${hdImages.portal2})`,
      textureBg: `url(${hdImages.texture})`
    }}>
      :root {
        --primary: var(--orange-base);
        --primary-dark: var(--orange-dark);
        --secondary: var(--orange-light);
        --text: #e0e0e0;
        --background: #120a05; /* dark base for contrast */
        --accent: var(--orange-base);
        --glow: rgba(249, 115, 22, 0.3);
      }

      body {
        margin: 0;
        font-family: 'Atkinson', sans-serif;
        color: var(--text);
        overflow-x: hidden;
        background:
          radial-gradient(circle at center, var(--orange-glass-medium) 0%, transparent 70%),
          linear-gradient(135deg, var(--primary-dark), var(--primary));
        background-size: cover;
      }

      main { width: 100%; max-width: 100%; margin: 0; padding: 0; }
      .container { width: 100%; max-width: 2400px; margin: 0 auto; padding: 0 2rem; }

      /* Portal background layers */
      .portal-bg {
        position: fixed;
        top: 0; left: 0;
        width: 100%; height: 100%;
        background:
          radial-gradient(circle at 10% 20%, var(--orange-glass-medium) 0%, transparent 50%),
          radial-gradient(circle at 90% 80%, var(--orange-glass-light) 0%, transparent 50%),
          var(--background);
        z-index: -1;
      }
      .portal-bg::before {
        content: '';
        position: absolute;
        top: 0; left: 0; width: 100%; height: 100%;
        background: var(--textureBg) center/cover;
        opacity: 0.05;
        mix-blend-mode: overlay;
      }

      /* Hero Section */
      .hero {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
        padding: 0; overflow: hidden;
        width: 100%;
      }
      .hero::before {
        content: '';
        position: absolute; top:0; left:0; right:0; bottom:0;
        background: var(--portalBg1) center/cover;
        opacity: 0.1; mix-blend-mode: overlay;
        animation: portalPulse 15s ease-in-out infinite;
      }
      .hero::after {
        content: '';
        position: absolute; top:0; left:0; right:0; bottom:0;
        background: var(--portalBg2) center/cover;
        opacity: 0.1; mix-blend-mode: color-dodge;
        animation: portalPulse 20s ease-in-out infinite reverse;
      }

      @keyframes portalPulse {
        0%, 100% { opacity: 0.1; transform: scale(1); }
        50% { opacity: 0.15; transform: scale(1.1); }
      }

      .hero-content {
        width: 100%; max-width: 2400px; margin: 0 auto;
        padding: 4rem 2rem; display: flex; align-items: center; gap: 4rem;
        text-align: left; position: relative; z-index: 2;
        backdrop-filter: blur(10px);
        background: var(--orange-glass-medium);
        border-top: 1px solid var(--orange-glass-light);
        border-bottom: 1px solid var(--orange-glass-light);
      }

      .hero-text { flex: 1; }
      .hero-image { flex: 1; position: relative; }
      .hero-image::before {
        content: '';
        position: absolute; top:-20px; left:-20px; right:-20px; bottom:-20px;
        background: radial-gradient(circle at center, var(--glow) 0%, transparent 70%);
        z-index: -1;
        animation: glowPulse 4s ease-in-out infinite;
      }
      @keyframes glowPulse { 0%,100%{transform:scale(1);opacity:0.5;}50%{transform:scale(1.1);opacity:0.8;} }

      .hero-image img {
        width: 100%; height: auto; border-radius: 20px;
        box-shadow: 0 0 20px var(--glow), 0 0 40px var(--glow);
        animation: productFloat 8s ease-in-out infinite;
      }
      @keyframes productFloat { 0%,100%{transform:translateY(0) rotate(0deg);}25%{transform:translateY(-10px) rotate(2deg);}75%{transform:translateY(10px) rotate(-2deg);} }

      .hero h1 {
        font-size: clamp(4rem, 10vw, 8rem);
        color: var(--secondary);
        margin: 0;
        text-shadow: 0 0 10px var(--glow), 0 0 20px var(--glow), 0 0 40px var(--glow);
        animation: pulse 4s ease-in-out infinite;
        letter-spacing: -2px; line-height:0.9;
      }
      @keyframes pulse { 0%,100%{text-shadow:0 0 10px var(--glow),0 0 20px var(--glow),0 0 40px var(--glow);}50%{text-shadow:0 0 20px var(--glow),0 0 40px var(--glow),0 0 60px var(--glow);} }

      .hero p { font-size: clamp(1.5rem,3vw,2rem); margin:2rem auto; max-width:800px; line-height:1.4; text-shadow:0 2px 4px rgba(0,0,0,0.5); }

      .cta-button {
        display:inline-block; background: var(--secondary); color: var(--primary-dark);
        padding:1.5rem 3rem; border-radius:50px; font-size:1.5rem; font-weight:bold; text-decoration:none;
        transition: all 0.3s ease; position:relative; overflow:hidden; margin-top:2rem;
        text-transform:uppercase; letter-spacing:2px;
        box-shadow:0 0 10px var(--glow),0 0 20px var(--glow); backdrop-filter: blur(5px);
      }
      .cta-button:hover {
        transform: scale(1.05) translateY(-5px);
        background: var(--orange-glass-medium);
        box-shadow:0 0 20px var(--glow),0 0 40px var(--glow);
      }

      /* Features Section */
      .features { width:100%; padding:8rem 0; background: linear-gradient(135deg,var(--primary-dark),var(--primary)); clip-path: polygon(0 5%,100% 0,100% 95%,0 100%); position:relative; }
      .features::before { content:''; position:absolute; top:0; left:0; width:100%; height:100%; background: var(--textureBg) center/cover; opacity:0.05; mix-blend-mode: overlay; }
      .features-grid { display:grid; grid-template-columns:repeat(auto-fit,minmax(400px,1fr)); gap:3rem; padding:0 2rem; max-width:2400px; margin:0 auto; }
      .feature-card {
        background: var(--orange-glass-medium); padding:2rem; border-radius:20px;
        transition: all 0.3s ease; backdrop-filter: blur(10px); border:1px solid var(--orange-glass-light);
        position:relative; overflow:hidden; min-height:250px; display:flex; flex-direction:column; justify-content:flex-start; gap:1rem;
      }
      .feature-card::before { content:''; position:absolute; top:0; left:0; width:100%; height:100%; background: linear-gradient(45deg, transparent, var(--orange-glass-light), transparent); transform:translateX(-100%); transition:0.5s; }
      .feature-card:hover { transform: translateY(-10px) scale(1.02); box-shadow: 0 10px 30px rgba(0,0,0,0.3); }
      .feature-card:hover::before { transform:translateX(100%); }
      .feature-card h3 { color: var(--secondary); font-size:1.5rem; margin:0; text-shadow:0 2px 4px rgba(0,0,0,0.3); line-height:1.3; }
      .feature-card p { margin:0; line-height:1.6; flex-grow:1; }

      /* Specs Section */
      .specs { background: linear-gradient(45deg, var(--primary-dark), var(--primary)); clip-path: polygon(0 0,100% 5%,100% 100%,0 95%); position:relative; }
      .specs::before { content:''; position:absolute; top:0; left:0; width:100%; height:100%; background: var(--textureBg) center/cover; opacity:0.05; mix-blend-mode: overlay; }
      .spec-item { text-align:center; padding:2rem; background: var(--orange-glass-medium); border-radius:15px; backdrop-filter:blur(5px); border:1px solid var(--orange-glass-light); transition: transform 0.3s ease; display:flex; flex-direction:column; justify-content:space-between; }
      .spec-item:hover { transform: translateY(-5px); }
      .spec-label { color: var(--secondary); font-weight:bold; font-size:1.2rem; margin-bottom:1rem; text-transform:uppercase; letter-spacing:2px; }
      .spec-value { font-size:1.1rem; line-height:1.6; }

      /* Blog Section */
      .blog-section { padding:8rem 0; background: var(--background); position:relative; }
      .blog-section::before { content:''; position:absolute; top:0; left:0; width:100%; height:100%; background: radial-gradient(circle at 20% 30%, var(--orange-glass-light) 0%, transparent 70%), radial-gradient(circle at 80% 70%, var(--orange-glass-medium) 0%, transparent 70%); }

      .blog-card, .testimonial-card { background: var(--orange-glass-medium); border:1px solid var(--orange-glass-light); backdrop-filter:blur(10px); border-radius:20px; transition: all 0.3s ease; }
      .blog-card:hover, .testimonial-card:hover { transform: translateY(-5px); box-shadow: 0 10px 30px rgba(0,0,0,0.3); }
    </style>
  </head>
  <body>
    <div class="portal-bg"></div>
    <main>
      <section class="hero">
        <div class="hero-content">
          <div class="hero-text">
            <h1>{product.name}</h1>
            <p class="tagline">{product.tagline}</p>
            <p class="description">{product.description}</p>
            <a href={product.callToAction.url} class="cta-button">{product.callToAction.text}</a>
          </div>
          <div class="hero-image">
            <img src={hdImages.product} alt="Physics Society" />
          </div>
        </div>
      </section>

      <section class="features">
        <div class="container">
          <h2>Interdimensional Features</h2>
          <div class="features-grid">
            {product.features.map((feature) => (
              <div class="feature-card">
                <h3>{feature.title}</h3>
                <p>{feature.description}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <section class="specs">
        <div class="container">
          <h2>Quantum Specifications</h2>
          <div class="specs-grid">
            {Object.entries(product.specs).map(([key, value]) => (
              <div class="spec-item">
                <div class="spec-label">{key}</div>
                <div class="spec-value">{value}</div>
              </div>
            ))}
          </div>
        </div>
      </section>

      <section class="blog-section">
        <div class="container">
          <h2>Interdimensional Blog</h2>
          <div class="blog-grid">
            {posts.map((post) => (
              <a href={`/blog/${post.id}/`} class="blog-link">
                <article class="blog-card">
                  <img src={post.data.heroImage} alt="" class="blog-image"/>
                  <div class="blog-content">
                    <h3 class="blog-title">{post.data.title}</h3>
                    <div class="blog-date"><FormattedDate date={post.data.pubDate} /></div>
                    <p class="blog-description">{post.data.description}</p>
                  </div>
                </article>
              </a>
            ))}
          </div>
        </div>
      </section>

      <footer>
        <div class="container">
          <div class="social-links">
            {product.footer.socialLinks.map((link) => (
              <a href={link.url} target="_blank" rel="noopener noreferrer">{link.platform}</a>
            ))}
          </div>
          <p class="disclaimer">{product.footer.legalDisclaimer}</p>
          <p>Contact: <a href={`mailto:${product.footer.contactEmail}`}>{product.footer.contactEmail}</a></p>
        </div>
      </footer>
    </main>
  </body>
</html>
